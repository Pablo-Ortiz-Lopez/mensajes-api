{
  "name": "mensajes-api",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Pablo Ortiz LÃ³pez",
    "url": "https://github.com/Pablo-Ortiz-Lopez"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-polyfill": "^6.26.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "jsonschema": "^1.4.0",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.1"
  },
  "devDependencies": {
    "babel-plugin-inline-json-import": "^0.3.2",
    "jest": "^25.1.0"
  },
  "nodemonConfig": {
    "exec": "yarn run build  && NODE_ENV=dev node ./dist/bin/server",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "babel-plugin-inline-json-import"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "pro": "yarn install && yarn run build && NODE_ENV=pro pm2 start ./dist/bin/server.js --name parkink-api",
    "deploy": "git pull && yarn install && yarn run build && pm2 restart parkink-api",
    "dev": "nodemon",
    "build": "rimraf dist && babel ./server --out-dir dist",
    "clean": "rimraf dist",
    "test": "jest"
  }
}
