  "private": true,
  "author": {
    "name": "Pablo Ortiz LÃ³pez",
    "url": "https://github.com/Pablo-Ortiz-Lopez"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.8.4",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^5.0.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "global": "^4.4.0",
    "jsonschema": "^1.4.0",
    "jwt-then": "^1.0.1",
    "mongoose": "^5.10.13",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.1"
  },
  "devDependencies": {
    "@babel/node": "^7.12.6",
    "babel-plugin-inline-json-import": "^0.3.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "jest": "^25.1.0"
  },
  "nodemonConfig": {
    "exec": "NODE_ENV=dev npx babel-node src/bin/server.js",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "babel-plugin-inline-json-import",
      "@babel/plugin-proposal-class-properties",
      [
        "module-resolver",
        {
          "root": [
            "./"
          ]
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "pro": "yarn install && yarn run build && NODE_ENV=pro pm2 start ./dist/bin/server.js --name mensajes-api",
    "deploy": "git pull && yarn install && yarn run build && pm2 restart mensajes-api",
    "dev": "nodemon",
    "build": "rimraf dist && babel src --out-dir dist",
    "clean": "rimraf dist",
    "test": "jest"
  }
}
